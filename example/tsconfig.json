{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "esNext",
        "module": "esNext",
        "moduleResolution": "node",
        "sourceMap": true,
        "allowJs": true,
        "emitDeclarationOnly": false,
        "noLib": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "pretty": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "importHelpers": false,
        "noEmitHelpers": true,
        "lib": [
            "es2018",
            "dom"
        ],
        "types": [
            "svelte"
        ]
    },
    "include": [
        "./src/**/*",
        "../package/typescript/*",
        "../package/svelte/*",
        "../package/svelte/defaults/*",
        "../package/svelte/tailwind/*",
    ],
    "exclude": [
        "./node_modules"
    ],
    "compileOnSave": false
}