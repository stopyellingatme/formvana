{
    "compilerOptions": {
        "target": "ESNext",
        "moduleResolution": "node",
        "noUnusedLocals": false,
        "strict": true,
        "pretty": true,
        "esModuleInterop": true,
        "declaration": true,
        "declarationMap": false,
        "declarationDir": "./lib/types",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "emitDeclarationOnly": true,
    },
    "include": [
        "lib/core/**/*",
    ],
    "exclude": [
        "node_modules",
        "lib/types/**/*",
        "lib/utilities/**/*",
    ]
}