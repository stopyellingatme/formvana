{
    "compilerOptions": {
        "target": "ES2018",
        "moduleResolution": "node",
        "noUnusedLocals": false,
        "strict": true,
        "esModuleInterop": true,
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "./lib",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "./lib",
    },
    "include": [
        "lib"
    ],
    "exclude": [
        "node_modules"
    ]
}