{
    "compilerOptions": {
        "target": "esNext",
        "module": "esNext",
        "moduleResolution": "node",
        "allowJs": true,
        "noLib": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "pretty": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "lib": [
            "es2018",
            "dom"
        ],
        "types": [
            "svelte"
        ]
    },
    "include": [
        "example/**/*",
        "package/**/*",
    ],
    "exclude": [
        "node_modules"
    ],
}