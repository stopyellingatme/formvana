{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "esNext",
        "module": "esNext",
        "moduleResolution": "node",
        "sourceMap": true,
        "allowJs": true,
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "./package/typescript",
        "emitDeclarationOnly": true,
        "noLib": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "pretty": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "importHelpers": false,
        "noEmitHelpers": true,
        "outDir": "./package/typescript",
        "lib": [
            "es2018",
            "dom"
        ],
        "types": [
            "svelte"
        ]
    },
    "include": [
        "src/**/*",
        "package/**/*",
    ],
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": false
}